{
  "compilerOptions": {
    "target": "ES6",
    "resolveJsonModule": true,
    "module": "commonjs",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@utils/*": [
        "utils/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@helpers/*": [
        "helpers/*"
      ],
      "@services/*": [
        "services/*"
      ]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}